{
  "manifest_version": 3,
  "name": "Filtro de Campañas",
  "version": "1.0",
  "description": "Extensión para filtrar campañas por cliente, estado y buscador.",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://mantenedornuevo.movizzon.com/appMonitors"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["x.png", "lupa.png"],
      "matches": ["<all_urls>"]
    }
  ]
}

